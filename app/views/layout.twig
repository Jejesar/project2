		<script defer src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		{# PAGE BY PAGE SCRIPTS #}
		{% block scripts %}{% endblock %}

		{# STYLE SHEETS #}
		<link rel='stylesheet' href='/stylesheets/style.css'/>
